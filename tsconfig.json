{
  "files": ["lib/prostgles-full.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2019",
    "lib": [
      "es6",
      "dom", 
      "es2017",
      "es2019"
    ],
    "strict": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    // "sourceMap": true,

    /* OMG. webpack ts-loader bypased due to this */
    "rootDir": "./lib",
    "noImplicitAny": false,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "ignoreDeprecations": "5.0",
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["lib"],
  "exclude": [
    "./dist",
    "./tests",
    "node_modules"
  ]
}